<!-- 形状 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <solid android:color="#fff" />
    <!-- 边框 -->
    <stroke
        android:width="2dp"
        android:color="#ff4444" />
    <!-- 内填充颜色 -->
    <padding
        android:bottom="5dp"
        android:left="10dp"
        android:right="10dp"
        android:top="5dp" />
    <!-- 圆角 -->
    <corners android:radius="10dp" />

</shape>