<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout
        android:id="@+id/rel"
        android:background="@drawable/lianxikefu_cancel_radius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_driver"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:src="@drawable/driver1"
            android:layout_marginRight="15dp"/>
        <TextView
            android:id="@+id/tv_driver"
            android:layout_toRightOf="@id/iv_driver"
            android:text="小伴接送员"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_driver"
            android:layout_below="@id/tv_driver"
            android:layout_width="wrap_content"
            android:textSize="17sp"
            android:layout_height="wrap_content"
            android:text="匹配中"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/right"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_below="@id/rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/lin_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_start"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/start"/>
            <TextView
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上海市实验小学"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_line"
            android:layout_below="@id/lin_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/line"/>
        <LinearLayout
            android:id="@+id/lin_end"
            android:layout_below="@id/iv_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/end"/>
            <TextView
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="南汇实验小学"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_pro"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_below="@id/lin_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/spot1"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="50dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/hline2"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/spot2"/>
            <ImageView
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/hline1"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/spot2"/>
            <ImageView
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/hline1"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/spot2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lin_pro">
            <TextView
                android:text="订单确认"
                android:textColor="@color/red"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"/>
            <TextView
                android:text="拼车成功"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"/>
            <TextView
                android:text="匹配接送员"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"/>
            <TextView
                android:text="运行中"
                android:layout_weight="0.2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_add_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发起新路线"
            android:layout_alignParentBottom="true"
            android:background="@color/red"
            android:textColor="@color/white"/>
    </RelativeLayout>
</RelativeLayout>