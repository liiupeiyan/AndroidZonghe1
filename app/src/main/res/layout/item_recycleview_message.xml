<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"

        android:orientation="horizontal"
        android:background="@drawable/radius"
        xmlns:android="http://schemas.android.com/apk/res/android">
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/item_msg_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="重磅！春节放31天假。。。。。。。。。"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_below="@+id/item_msg_title"
                    android:id="@+id/item_msg_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="本地资讯"
                    android:textColor="@color/gray"/>
                <TextView
                    android:layout_below="@+id/item_msg_title"
                    android:id="@+id/item_msg_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/item_msg_type"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:text="本地资讯"
                    android:textColor="@color/gray"/>
            </RelativeLayout>
            <ImageView
                android:id="@+id/item_msg_img"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/img1"
                android:scaleType="centerCrop"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="60dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_height="match_parent"
            android:background="@android:color/holo_red_light"
            android:text="删除"
            android:textColor="@android:color/white" />
    </LinearLayout>

</com.mcxtzhang.swipemenulib.SwipeMenuLayout>